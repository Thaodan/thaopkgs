+bool
+nsMenuItem::IsCompatibleWithNativeData(DbusmenuMenuitem *aNativeData)
+{
+    return nsCRT::strcmp(dbusmenu_menuitem_property_get(aNativeData,
+                                                        DBUSMENU_MENUITEM_PROP_TYPE),
+                         "separator") != 0;
+}
