+    if (mNativeData) {
+        g_signal_handlers_disconnect_by_func(mNativeData,
+                                             nsNativeMenuUtils::FuncToVoidPtr(item_activated_cb),
+                                             this);
+    }
+
+    MOZ_COUNT_DTOR(nsMenuItem);
+}
