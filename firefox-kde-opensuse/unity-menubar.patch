+        ePropLabel = (1 << 0),
+        ePropEnabled = (1 << 1),
+        ePropVisible = (1 << 2),
+        ePropIconData = (1 << 3),
+        ePropType = (1 << 4),
+        ePropShortcut = (1 << 5),
