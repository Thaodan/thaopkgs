+static void
+DispatchMouseEvent(nsIContent *aTarget, uint32_t aMsg)
+{
+    if (!aTarget) {
+        return;
+    }
+
+    nsMouseEvent event(true, aMsg, nullptr, nsMouseEvent::eReal);
+    aTarget->DispatchDOMEvent(&event, nullptr, nullptr, nullptr);
+}
